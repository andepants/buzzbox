rules_version = '2';

// ============================================
// DEVELOPMENT-ONLY WIDE OPEN RULES
// WARNING: These rules are COMPLETELY INSECURE and allow ALL access
// ONLY use for development/testing - NEVER in production!
// TODO: Replace with production rules before launch
// ============================================

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow EVERYONE (authenticated AND unauthenticated) to read/write EVERYTHING
    // This includes signup flows where users aren't authenticated yet
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
